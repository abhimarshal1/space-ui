<div class="notifications-area fs12 {{if isStacked 'add-background'}}">
    {{#if isStacked}}
        <div class="clear-all-header" onclick={{action 'clearAll'}}>Clear All</div>
    {{/if}}
    <div class="primary-notification {{if isFullView 'd-none'}}">
        {{#if notifications.firstObject}}
            {{p-notification-instance
          notification=notifications.firstObject
          slideIn=slideIn
          remove=(action 'remove')
          secondaryAction=notifications.firstObject.actions.callback
        }}
        {{/if}}
        {{#if isStacked}}
            <div class="show-more-footer" onclick={{action 'showAll'}}>See {{hiddenNotificationsLength}} more</div>
        {{/if}}
    </div>
    {{#if isFullView}}
        <div class="secondary-notifications">
            {{#each notifications as |notification|}}
                {{p-notification-instance
          notification=notification
          direction="up"
          willBeDestory=willBeDestory
          remove=(action 'remove')
          secondaryAction=notification.actions.callback
        }}
            {{/each}}
        </div>
        {{#if isStacked}}
            <div class="show-less-footer" onclick={{action 'showLess'}}>See Less</div>
        {{/if}}
    {{/if}}
</div>
